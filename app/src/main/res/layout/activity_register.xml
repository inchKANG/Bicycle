<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="입력사항"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="7"
            android:background="@drawable/nullbutton"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="ID"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/register_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6.8"
                    android:background="@drawable/nullbutton"
                    android:hint="ID를 입력하세요 (6글자 이상)"
                    android:maxLines="1"
                    android:paddingLeft="10dp"

                    android:paddingRight="10dp"
                    android:textSize="15sp" />
                <!--padding은 들여쓰기-->
            </LinearLayout>

            <Button
                android:id="@+id/samecheck"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/skybutton"
                android:text="ID중복확인" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="EMAIL"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/register_Email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6.8"
                    android:background="@drawable/nullbutton"
                    android:hint="Email을 입력하세요."
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="15sp" />
                <!--padding은 들여쓰기-->
            </LinearLayout>

            <Button
                android:id="@+id/Emailcheck"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/skybutton"
                android:text="Email중복확인" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="비밀번호"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.8"
                    android:background="@drawable/nullbutton"
                    android:hint="비밀번호 입력 (8자리 이상)"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="비밀번호확인"
                    android:textColor="#000000"
                    android:textSize="20dp"

                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/register_password2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.8"
                    android:background="@drawable/nullbutton"
                    android:hint="비밀번호 재입력"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="이름"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/register_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.8"
                    android:background="@drawable/nullbutton"
                    android:hint="이름을 입력하세요"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="성별"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/register_male"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="남자" />

                <CheckBox
                    android:id="@+id/register_female"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="여자" />


            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_bysvg" />


        </LinearLayout>


        <Button

            android:id="@+id/register_registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="@drawable/signbutton"
            android:text="회원가입"
            android:textSize="20dp"
            android:textStyle="bold"

            />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>